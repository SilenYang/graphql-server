{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "lib": ["es6", "es7", "es2017", "es2018", "es2019", "esnext"],
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src"]
}
